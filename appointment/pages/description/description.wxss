page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
}

.categroy-left{
    float: left;
    width: 250rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}

.categroy-left .cate-list{
    /* height: 90rpx; */
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
}

.categroy-left .cate-list.on{
    color: #AB956D;
    border-color: #AB956D;
}

.categroy-left .itemArr {
    font-size: 24rpx;
    color: red;
    /* height: 90rpx; */
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
}

.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
}

.cate-box{
    height: 100%;
    padding:40rpx;
    box-sizing: border-box;
}
