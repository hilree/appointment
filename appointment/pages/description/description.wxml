<view class="main">
    <view class="categroy-left">
        <view wx:for="{{category}}" wx:for-index="idx" class="cate-list{{curIndex == idx ? '-on' : ''}}">
            <text bindtap="switchTab" data-idx="{{idx}}" data-id="{{item.id}}">{{item.name}}</text>
            <view wx:for="{{itemArr}}" wx:if="{{item.idx == idx}}" class="item-arr{{index == toViewItem ? '-active' : ''}}">
                <text bindtap="switchTabItem" data-idx="{{idx}}" data-index="{{index}}" hidden="{{idx == curIndex ? false : true}}">{{item.name}}</text>
            </view>
        </view>
    </view>

    <view class="categroy-right" scroll-y="{{isScroll}}" scroll-into-view="{{toView}}" scroll-with-animation="true">
        <block wx:for="{{description}}" wx:key="index">
            <view id="{{item.id}}" class="cate-box">
                <view class="description-text">
                    <text hidden="{{item.id == toView ? false : true}}">{{item.info}}</text>
                </view>
            </view>
        </block>
        <block wx:for="{{descriptionItem}}" wx:key="index">
            <view id="{{item.id}}" class="cate-box">
                <view class="description-text">
                    <text hidden="{{item.id == toViewItem ? false : true}}">{{item.info}}</text>
                </view>
            </view>
        </block>
    </view>
</view>