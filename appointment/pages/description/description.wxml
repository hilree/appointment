<view class="categroy-left">
    <view wx:for="{{category}}" wx:key="index" wx:for-index="idx" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchTab"
        class="cate-list {{curIndex === index ? 'on' : ''}}">
        <text>{{item.name}}</text>
        <view wx:for="{{itemArr}}" wx:if="{{item.idx == idx}}" class="itemArr">
            <text>{{item.name}}</text>
        </view>
    </view>
</view>

<scroll-view class="categroy-right" scroll-y="{{isScroll}}" scroll-into-view="{{toView}}" scroll-with-animation="true">
    <block wx:for="{{detail}}" wx:key="idx">
        <view id="{{item.id}}" class="cate-box">
            <view class="product">
                <view class="classname">
                    <text>{{item.info}}</text>
                </view>
            </view>
        </view>
    </block>
</scroll-view>